{% extends 'base.html.twig' %} 

{% block title %}Détail Série{% endblock %} 

{% block stylesheets %} 
    {{ parent() }} 
    {{ encore_entry_link_tags('wild_season') }} 
{% endblock %} 

{% block body %}

<!-- Contenu du site -->
<div class="content">

    <!-- Recherche et Filtre -->
    <section class="search">

        <!-- Search -->
        <div class="search_filtre row ml-2">

            <!-- Filtre -->
            <div class="dropdown show ">
                <a class="btn dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filtre
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <form action="" class="form_filtre">

                        <!-- Filtre par Année -->
                        <label for="">Par Année </label>
                        <select name="" id="">
                            <option value="">2019</option>
                            <option value="">2018</option>
                            <option value="">2017</option>
                        </select>


                        <!-- Filtre par Pays -->
                        <label for="">Par Pays &nbsp</label>
                        <select name="" id="">
                            <option value="">France</option>
                            <option value="">Angleterre</option>
                            <option value="">Espagne</option>
                        </select>

                        <button class="btn btn-success filtre mt-2">Filtrer</button>
                    </form>
                </div>
            </div>

            <!-- Search -->
            <form action="" class="form_search w-75 px-0">
                <input type="search" placeholder="Search" class="form-control w-50 d-inline-block">
                <button class="btn btn-danger">Search</button>
            </form>
        </div>
        <!-- Fin search -->
    </section>

    <!-- Titre -->
    <section class="titre">
        <h2>Saison {{ season.number }} de {{ program.title }}</h2>
    </section>

    <!-- Détail de la Saison -->
    <section class="saison">
        <!-- Synopsis -->
        <div class="show p-sm-4 p-2 mx-sm-4 ">
            <div class="description text-white">
                <h2>
                    La Saison <span> {{ season.number }}</span> de                    
                    <a href="{{ path('wild_show',{'slug': program.unslugy }) }}"> {{ program.title }} </a>  
                    est constituée de <span>{{ season.episodes | length }}</span> épisode(s) et 
                    a été diffusée en <span>{{ season.year }}</span>.               
                </h2>

                <hr>

                <h2>Description</h2>
                <p>{{ season.description }}</p>
            </div>
            <!-- Image -->
            <div class="img_info row m-0 pl-0">
                <div class="img col-xl-3 p-2 bg-light ">
                    <img class="card-img img-responsive" src="{{ program.poster }}" alt="Card image">
                </div>

                <div class="info col-xl-9  mt-xl-0 mt-3 pl-xl-4 px-0 d-flex flex-column justify-content-between">
                    <table class="table table-light table-striped mb-0">
                        <caption class="pl-3 bg-white">Liste des épisodes</caption>
                        <tbody class="w-100">
                            {% for episode in season.episodes %}                        
                                <tr class="row m-0">
                                    <th scope="row" class="col-xl-5 col-12">Episode {{ episode.number }}</th>
                                    <td class="col-xl-7 col-12">{{ episode.title }}</td>
                                </tr>    
                            {% endfor %}
                        </tbody>
                    </table>
                    <!-- Retour page accueil -->
                    <div class="retour row mx-0">
                        <a href="{{ path('wild_show',{'slug': program.unslugy }) }}" class="btn btn-info col-12 ">Retour</a>
                    </div>  
                </div>
                <!-- fin info -->                              
            </div>
            <!-- Fin img_info -->
        </div>
        <!-- Fin show -->
    </section>
    <!-- Fin section serie -->



    <!-- Footer -->
    <footer>
        <div class="row">
            <!-- Wild -->
            <div class="col-md-6 mt-4">
                <ul class="text-center m-0 p-0">
                    <li>
                        <a href="#!">Wild Series</a>
                    </li>
                </ul>
            </div>

            <!-- Contact -->
            <div class="col-md-6 mt-4 ">
                <ul class="text-center m-0 p-0">
                    <li>
                        <a href="#!">Contactez-nous</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Grid row -->

        <!-- Copyright -->
        <div class="footer-copyright text-center py-3 text-light">© 2019 Copyright:
            <a href=""> Wild-Series.com</a>
        </div>

    </footer>
    <!-- Footer -->
</div>
<!-- Fin content -->
{% endblock %}

{% block javascripts %} 
    {{ parent() }} 
    {{ encore_entry_script_tags('wild_season') }} 
{% endblock %} 